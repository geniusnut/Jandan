<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/yellowA200</item>
        <item name="colorPrimaryDark">@color/yellow500</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:paddingLeft">5dp</item>item>
        <item name="android:paddingRight">5dp</item>item>
        <item name="android:paddingTop">2dp</item>item>
        <item name="android:paddingBottom">2dp</item>item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>