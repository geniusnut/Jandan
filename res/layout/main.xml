        <!--android:layout_gravity="start"-->
        <!--android:name="com.nut.Jandan.Fragment.DrawerFragment"-->
        <!--tools:layout="@layout/drawer"/>-->

    </android.support.v4.widget.DrawerLayout>
</FrameLayout>